{
    "compilerOptions": {
        "outDir": "build/dist",
        "target": "esnext",
        "checkJs": true,
        "allowJs": true,
        "module": "esnext",
        "moduleResolution": "node",
        "preserveValueImports": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "cypress",
        ],
        "lib": [
            "es5",
            "dom"
        ]
    },
    "include": [
        "cypress",
    ],
    "exclude": [
        "node_modules"
    ]
}